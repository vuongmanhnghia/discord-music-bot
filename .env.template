# Environment variables for configuring the Discord Music Bot
BOT_NAME=Music Bot
BOT_TOKEN=your-discord-bot-token
PLAYLIST_DIR=playlist
MUSIC_DIR=music
COMMAND_PREFIX=l!
STAY_CONNECTED_24_7=true

# SPOTIFY API CREDENTIALS (Optional, for Spotify support)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# LOGGING SETTINGS
LOG_LEVEL=INFO
LOG_FILE=bot.log

# BOT PERFORMANCE SETTINGS
BOT_ASYNC_WORKERS=3 # Số worker xử lý đồng thời
BOT_MAX_CONCURRENT=3 # Số bài hát xử lý đồng thời
BOT_ENABLE_BACKGROUND=true # Bật xử lý nền
BOT_CACHE_SIZE=100 # Số bài hát cache tối đa (30=Server yếu, 100-200=Server mạnh)
BOT_CACHE_DURATION=60 # Thời gian cache (phút) (30=Server yếu, 60-120=Server mạnh)
BOT_MEMORY_LIMIT_MB=512 # Giới hạn RAM cho cache (MB) (200=Server yếu, 512-1024=Server mạnh)

# QUEUE MANAGEMENT
BOT_MAX_QUEUE_SIZE=100 # Kích thước queue tối đa (20=Server yếu, 100-200=Server mạnh)
BOT_PROCESSING_QUEUE_SIZE=50 # Kích thước queue xử lý (10=Server yếu, 50-100=Server mạnh)

# AUDIO QUALITY SETTINGS
BOT_AUDIO_BITRATE=192k # Bitrate audio (128k=Server yếu, 192k=Balanced, 320k=High quality)
BOT_AUDIO_FORMAT=opus # Format audio (opus recommended)

# NETWORK & RETRY SETTINGS  
BOT_CONNECTION_TIMEOUT=30 # Timeout kết nối (giây) (20=Server yếu, 30-45=Server mạnh)
BOT_MAX_RETRIES=3 # Số lần retry tối đa (2=Server yếu, 3-5=Server mạnh)
BOT_FRAGMENT_RETRIES=3 # Retry cho fragments (2=Server yếu, 3-5=Server mạnh) 
BOT_RECONNECT_DELAY_MAX=5 # Delay tối đa khi reconnect (3=Server yếu, 5-10=Server mạnh)

# RESOURCE MONITORING
BOT_MEMORY_THRESHOLD=85 # Ngưỡng RAM cảnh báo (%) (75=Server yếu, 85-90=Server mạnh)
BOT_ENABLE_MONITORING=true # Bật monitoring tài nguyên (true recommended)
BOT_CLEANUP_INTERVAL=300 # Interval cleanup (giây) (180=Server yếu, 300-600=Server mạnh)

