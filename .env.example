# =============================================================================
# Discord Music Bot - Environment Configuration
# =============================================================================

# Discord Bot Token (Required)
BOT_TOKEN=your_bot_token_here

# Bot Configuration
BOT_NAME=Discord Music Bot
VERSION=2.0.0

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
# If DATABASE_URL is set, the bot will use PostgreSQL for playlist storage
# If not set, it will fall back to file-based storage

# PostgreSQL connection URL (for standalone bot)
# DATABASE_URL=postgres://user:password@localhost:5432/musicbot?sslmode=disable

# Docker Compose will set this automatically using these values:
USE_DATABASE=true
POSTGRES_USER=musicbot
POSTGRES_PASSWORD=musicbot
POSTGRES_DB=musicbot

# =============================================================================
# Storage Configuration
# =============================================================================

# Playlist Directory (used for file-based storage fallback)
PLAYLIST_DIR=./playlist

# Cache Directory
CACHE_DIR=./cache

# =============================================================================
# Bot Behavior
# =============================================================================

# 24/7 Mode - Stay connected to voice channel
STAY_CONNECTED_24_7=true

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=

# =============================================================================
# Performance
# =============================================================================

WORKER_COUNT=3
MAX_QUEUE_SIZE=100
CACHE_SIZE_MB=100
CACHE_DURATION_MINUTES=360
